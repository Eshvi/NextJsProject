{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "src",
    "outDir": "./dist",
    "esModuleInterop": true, /* Enable esModuleInterop to ease support for importing CommonJS modules */
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "paths": {
      "@database": ["database"],
      "@interfaces/*": ["interfaces/*"],
      "@routes/*": ["routes/*"]
    }
  }
}
